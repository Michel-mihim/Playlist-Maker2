<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".lib.ui.FavoriteFragment">

    <ImageView
        android:id="@+id/lib_epmty_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/not_found"
        android:layout_marginTop="@dimen/lib_pic_margin_top"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/lib_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/not_found_margin_horizontal"
        android:layout_marginTop="@dimen/lib_text_margin_top"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_horizontal"
        android:text="@string/no_playlist"
        android:textColor="@color/not_found_text_color"
        android:textSize="@dimen/not_found_text_size"
        android:textStyle="bold"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favorite_tracks_recycler"/>

</FrameLayout>