<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menuColor">

    <ImageView
        android:id="@+id/new_playlist_picture"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/grid_frame"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="@dimen/dp4"
        android:src="@drawable/placeholder_large"
        />

    <TextView
        android:id="@+id/new_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_playlist_picture"
        android:layout_marginTop="@dimen/dp4"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/sp12"
        android:textColor="@color/menu_items_text_color"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/playlist_name"
        android:layout_marginHorizontal="@dimen/dp4"/>

    <TextView
        android:id="@+id/new_playlist_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_playlist_name"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/sp12"
        android:textColor="@color/menu_items_text_color"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/tracks_count"
        android:layout_marginHorizontal="@dimen/dp4"/>

</androidx.constraintlayout.widget.ConstraintLayout>